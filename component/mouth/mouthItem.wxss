/*每月推荐*/
.mouth{
    width: 100%;
    height: 440rpx;
    position: relative;
    display: flex;
    align-items: center;
    justify-items: center;
}
.mouth-bg{
    width:690rpx;
    height: 400rpx;
    border-radius: 10rpx;
    /*position: absolute;*/
    z-index: 2;
    margin: 0 auto;
}
.mouth-bg-shadow{
    box-shadow: 0 0 10px #999999;
}
.mouth-time{
    z-index: 3;
    position: absolute;
    top:40rpx;
    text-align: center;
    color:#fff;
    width: 100%;
}
.mouth-text{
    z-index: 3;
    position: absolute;
    bottom: 40rpx;text-align: center;
    width: 100%;
    color:#fff;
    font-size: 44rpx;
}
