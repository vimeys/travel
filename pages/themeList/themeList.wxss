/* pages/themeList/themeList.wxss */
.scroll{
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
}
.scroll-item{
    white-space: nowrap;
    width: 100%;
    line-height: 120rpx;
    height: 120rpx;
}
.scroll-item view{
    display: inline-block;
    height: 60rpx;
    line-height: 60rpx;
    padding: 0 30rpx;
    border-radius: 30rpx;
    background: #00A58C;
    margin: 0 10rpx;
}
/*主题列表*/
.theme-list{
    background: #EBEBEB;
    padding: 30rpx 30rpx;
    column-count:2;
    column-gap: 20rpx;
}
.theme-text{
    width: 345rpx;
    height: 100rpx;
    background: #fff;
}
.theme-li{
    width: 344rpx;
    background: #fff;
}
.theme-li-image{
    width: 345rpx;


}