/* pages/themeDetail/themeDetail.wxss */
@import "../../utils/wxParse/wxParse.wxss";
.theme-titel{
    display: flex;
    flex-direction:row;
    justify-content: space-between;
}
.theme-title-left{
    display: flex;
    flex-direction: column;
    justify-items: flex-start;
}

.banner-num{
    width: 135rpx;
    height: 60rpx;
    border-bottom-left-radius: 30rpx;
    border-top-left-radius: 30rpx;
    background: #00A58C;
    color:#fafafa;
    font-size: 26rpx;
    text-align: center;line-height: 60rpx;

}
.theme-combo{
    display: flex;
    flex-direction: row;
    height: 40rpx;
    justify-content: flex-start;
    padding-left: 30rpx;
    align-items: center;
    color:#00A58C;
}
.them-combo-name{
    color:#00A58C;
}
.theme-combo-left{
    width: 12rpx;
    height: 20rpx;
    align-self: flex-end;
    border-left: 1px solid #00A58C;
    border-bottom: 1px solid #00A58C;
}
.theme-combo-right{
    width: 12rpx;
    height: 20rpx;
    align-self: flex-start;
    border-top: 1px solid #00A58C;
    border-right: 1px solid #00A58C;
}
.theme-name{
    display: flex;
    padding-left: 20rpx;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}

.theme-detail{
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}
.theme-detail-zan{
    text-align: center;
    border-bottom: none;
    line-height: 100rpx;
}
.theme-detail-det{
    border-bottom: none;
    text-align: center;
    line-height: 100rpx;
}
.none{
    border-bottom: 1px solid #00A58C;
}
.theme-detail-footer{
    display: flex;
    border-top: 1px solid #eee;
    position: fixed;
    bottom: 0;
    left: 0;
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
    height: 100rpx;
    padding: 0 40rpx;
    justify-items: center;
    align-items: center;
    background: #fff;
}
.theme-detail-btn{
    border: none;
    width: 210rpx;
    height: 70rpx;
    line-height: 70rpx;
    color:#fff;
    border-radius: 35rpx;
    background: #00A58C;
}
.theme-detail-red{
    font-size: 50rpx;
    color:#FF4200;
}