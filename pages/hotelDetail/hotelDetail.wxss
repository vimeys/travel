/* pages/hotelDetail/hotelDetail.wxss */
.prev-title-total{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.prev-title-left{
    display: flex;
    flex-direction: column;
}
.prev-title-time,.prev-title-addr{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    padding-left: 30rpx;
    margin-bottom: 30rpx;
}

.banner-num{
    width: 135rpx;
    height: 60rpx;
    border-bottom-left-radius: 30rpx;
    border-top-left-radius: 30rpx;
    background: #00A58C;
    color:#fafafa;
    font-size: 26rpx;
    text-align: center;line-height: 60rpx;

}
.prev-title-image image{
    width: 50rpx;
    height: 50rpx;
    margin-right:20rpx;
}


.theme-detail{
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}
.theme-detail-zan{
    text-align: center;
    border-bottom: none;
    line-height: 100rpx;
}
.theme-detail-det{
    border-bottom: none;
    text-align: center;
    line-height: 100rpx;
}
.none{
    border-bottom: 1px solid #00A58C;
}